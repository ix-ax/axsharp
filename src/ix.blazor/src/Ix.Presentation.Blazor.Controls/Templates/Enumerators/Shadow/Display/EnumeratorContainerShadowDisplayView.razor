@typeparam T
@inherits EnumeratorsBaseShadow<T>

<div class="w-100 form-group @OnlinerSymbol">
    <div>
        <label for="@ComponentId" >@Onliner.AttributeName</label>
    </div>
    <div>
        <input id="@ComponentId"
               class="w-100 form-control @AccessStatus"
               readonly="readonly"
               style=@(IsReadOnly? "" : "background-color:transparent")
               value="@EnumToIntConverter.Convert(@Onliner.Shadow,null,null,null)  " />
        <div class="invalid-feedback">
            @Onliner.AccessStatus.FailureReason
        </div>
    </div>
</div>