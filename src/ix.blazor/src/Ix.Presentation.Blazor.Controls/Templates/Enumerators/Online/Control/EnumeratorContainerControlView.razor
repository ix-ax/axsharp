@namespace Ix.Presentation.Blazor.Controls.Templates
@typeparam T
@inherits EnumeratorsBaseOnline<T>


 <TemplateView Symbol="@OnlinerSymbol" FailureReason="@Onliner.AccessStatus.FailureReason">
     <label for="@ComponentId"  >@Onliner.AttributeName</label>
  
        <select id="@ComponentId"
                class="w-100 form-select @AccessStatus"
                @bind="Value"
                disabled="@IsReadOnly">
            @foreach (var name in Names)
            {
                <option class="form-control" value=@EnumToIntConverter.ConvertBack(name,null,null,null)>@name</option>
            }
        </select>
 
</TemplateView>