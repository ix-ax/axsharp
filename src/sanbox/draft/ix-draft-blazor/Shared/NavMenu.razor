<div class="nav-menu bg-light">
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="oi oi-menu ms-2 p-2" style="font-size: 1.5rem" aria-hidden="true"></span>
    </button>

    <div class="@NavMenuCssClass nav-scrollable">
        <nav class="flex-column">
            <MenuItem Name="Home" Link="/" Icon="oi oi-home" />
            <MenuItem Name="Control" Link="control" Icon="oi oi-cog" />

            <ExpandableMenuItem Name="data" Icon="oi oi-align-center">
                <MenuItem Name="Process settings" Icon="oi oi-plus" />
                <MenuItem Name="Production data" Icon="oi oi-data-transfer-download" />
                <MenuItem Name="Tech data" Icon="oi oi-signal" />

                <ExpandableMenuItem Name="More Data" Link="data/more-data">
                    <MenuItem Name="First more data" Icon="oi oi-plus" />
                    <MenuItem Name="Second more data" />
                    <MenuItem Name="Third more data" Link="data/more-data/third-more-data" Icon="oi oi-plus" />
                </ExpandableMenuItem>

            </ExpandableMenuItem>

            <MenuItem Name="Components" Link="components" Icon="oi oi-grid-three-up" />

            <MenuItem Name="Diagnostics" Icon="oi oi-pulse" />

            <MenuItem Name="Users" Link="users" Icon="oi oi-person" />
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
