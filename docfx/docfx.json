{
  "metadata": [
    {
      "src":  [
        {        
          "files": [
            "ix.abstractions/src/**.csproj",
            "ix.blazor/src/**.csproj",
            "ix.compiler/src/**.csproj",
            "ix.connectors/src/**.csproj"
          ],
          "exclude": [
            "**Test*.csproj",
            "**/bin/**",
            "**/obj/**",
            "*.Properties",
            "*.Resx"
          ],
          "src": "../src/"
        }
      ],      
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "globalMetadata" : {
        "_appTitle" : {"api/index.md" : "API"},
        "_appName" : "IX",
        "_appFooter" : " Generated by DocFx. Â© Peter Kurhajec, MTS spol. s r.o., and awesome contributors",
        "_enableSearch" : true,
        "_appFaviconPath" : "images/favicon.ico"        
    },
    
    "sitemap": {
      "baseUrl": "https://ix-ax.github.io/ix/",
      "priority": 0.1,
      "changefreq": "weekly"
    },

    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]       
      },      
      {
        "files": [
          "articles/**.md",
          "articles/**.png",
          "articles/**.svg",
          "articles/**.gif",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "../docs",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      ["default","templates/material"]
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}